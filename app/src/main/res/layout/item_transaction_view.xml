<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Space
        android:id="@+id/space01"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatarDestinationImg"
        app:layout_constraintRight_toRightOf="@+id/avatarDestinationImg" />

    <TextView
        android:id="@+id/unreadItemCountTv"
        android:layout_width="14dp"
        android:layout_height="14dp"
        app:layout_constraintLeft_toLeftOf="@+id/space01"
        app:layout_constraintTop_toTopOf="@+id/space01"
        android:background="@drawable/ic_circle_red"
        android:text="10"
        android:textSize="9sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/avatarDestinationImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="1dp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:text="ُSajjad Shahbazi"
        app:layout_constraintTop_toTopOf="@+id/avatarDestinationImg"
        app:layout_constraintBottom_toBottomOf="@+id/avatarDestinationImg"
        app:layout_constraintRight_toLeftOf="@+id/avatarDestinationImg"
        android:textColor="@color/grey_l1"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintRight_toRightOf="@+id/name"
        android:layout_marginRight="4dp"
        android:text="12:48"
        android:textSize="8dp"
        android:textColor="@color/grey_l2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>